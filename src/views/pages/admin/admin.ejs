<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Link css bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!--Link iconos redes-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
   <link rel="stylesheet" href="/css/style.css">
   <link rel="stylesheet" href="/css/admin.css">
    <title>Admin | Funkoshop</title>
</head>

<body>

<%-include('../../partials/headerAdmin')-%>

<main id="admin" class="container">
    <section class="admin_search">
        <iconify-icon class="admin__icon" icon="charm:search"></iconify-icon>
        <input class="admin__search-bar" type="text" name="search" id="search" placeholder="codigo">
    </section>
    <section class="admin__list">
        <div class="admin__header">
            <h2 style="text-align: center;" > LISTADO DE PRODUCTOS </h2>
            <span>AGREGAR<a href="/admin/create"><iconify-icon icon="bxs:plus-square" style="color: #f33;"></iconify-icon></a></span>
        </div>
            <header class="admin-table__header">
                <h3>ID</h3>
                <h3>Codigo</h3>
                <h3>Nombre del Producto</h3>
                <h3>Categoria</h3>
            </header>
        
        <div class="admin-table">
            

            <% items.forEach(item => { %>
                <article class="admin-table__row">
                    <p><%= item.product_id %></p>
                    <p><%= item.sku %></p>
                    <p><%= item.product_name %></p>
                    <p><%= item.licence_name %></p>
                    <!--<p><%= item.licence_id %></p>
                    <% if (item.licence_id == 2) {%> <p>STAR WARS</p> <% } else if  
                    (item.licence_id == 1) {%> <p>POKEMON</p> <% } else {%>
                          <p>HARRY POTTER</p>  <%}%>-->
                    <a href="/admin/edit/<%= item.product_id %>"><iconify-icon icon="mdi:pencil"></iconify-icon> </a>
                    <form action="/admin/delete/<%= item.product_id %>?_method=DELETE" method="POST">
                        
                        <button class="admin-table__btn-delete" type="submit">
                            <iconify-icon icon="heroicons-solid:trash" style="color: #f33;"></iconify-icon>
                        </button>
                    </form>
                </article>

            <%});%>
        </div>
    </section>
</main>

<%-include('../../partials/footerAdmin')-%>

<script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
<!--Links de JS bootstrap-->

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"></script>
</body>
</html>