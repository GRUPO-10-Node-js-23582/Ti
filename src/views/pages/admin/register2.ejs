   <link rel="stylesheet" href="/css/button.css">
    <title>Register | Funkoshop</title>
</head>

<body>

    
    <%-include('../../partials/headerAdmin')-%>
    <main id="register" class="container">
        <div class="register__header">
            <h2 class="register__title">CREAR TU CUENTA</h2>
            <p class="register__subtitle">Completa el formulario para ser parte del mundo de los Funkos</p>
        </div>
        <form class="register__form" action="/auth/register" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form__box--grid">
                <label class="form__label" for="name">Nombre:</label>
                <input class="form__input" type="text" name="name" id="name" placeholder=" tu nombre" required>
            </div>
            <div class="form__box--grid">
                <label class="form__label" for="lastname">Apellido:</label>
                <input class="form__input" type="text" name="lastname" id="lastname" placeholder=" tu apellido" required>
            </div>
            <div class="form__box--grid">
                <label class="form__label" for="email">Email:</label>
                <input class="form__input" type="email" name="email" id="email" placeholder="tunombre@tuemail.com" required>
            </div>
            <div class="form__box--grid">
                <label class="form__label" for="password">Contraseña:</label>
                <input class="form__input" type="text" name="password" id="password" placeholder="tu password" required>
            </div>
            <div class="form__box--grid">
                <label class="form__label" for="password2">Repite Contraseña:</label>
                <input class="form__input" type="text" name="password2" id="password2" placeholder="tu password otra vez" required>
            </div>
            <div class="form__submission">
                <input style="background-color:rgb(255, 51, 51)" class="form__btn btn btn--primary btn--large" type="submit" value="Registrar">
                <div class="form__terms">
                    <input type="checkbox" name="" id="">
                    <label for="">Acepto <a style="font-size: 1.0em" class="form__link" href="">Términos y Condiciones</a></label>
                </div>
            </div>
        </form>
      </main>




<%-include('../../partials/footerAdmin')-%>

