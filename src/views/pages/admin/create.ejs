<%-include('../../partials/headerAdmin')-%>
<main id="create" class="container">
    <h1 style="text-align: center;"> CREAR NUEVO ITEM </h1>
    <section id="create" class="container">
        <h2>Ingresa los datos a continuación para crear un nuevo item:</h2>
        <form class="form" action="/admin/create" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form__box">
                <label class="form__box--label" for="collection">Licencia:</label>
                <select class="form__box--select" name="collection" id="collection" required>
                    <option value="" disabled selected hidden>Seleccionar</option>
                    <option value="starwars">Star Wars</option>
                    <option value="pokemon">Pokemon</option>
                    <option value="harrypotter">Harry Potter</option>
                </select>
            </div>
            <div class="form__box">
                <label class="form__box--label" for="name">Nombre del producto:</label>
                <input class="form__box--input" type="text" name="name" id="name" placeholder="nombre del producto" required>
            </div>
            <div class="form__box">
                <textarea class="form__box--area" name="description" id="description" cols="30" rows="10" placeholder="Descripción del producto" required></textarea>
            </div>
            <div class="form__box">
                <label class="form__box--label" for="sku">SKU:</label>
                <input class="form__box--input" type="text" name="sku" id="sku" placeholder="ABCXXXYYY" required>
            </div>
            <div class="form__box">
                <label class="form__box--label" for="price">Precio:</label>
                <input class="form__box--input" type="text" name="price" id="price" data-type="currency" placeholder="$ 0.000,00">
            </div>
            <div class="form__box">
                <label class="form__box--label"for="discount">Descuento:</label>
                <input class="form__box--input" type="number" min="0" max="100" step="5" name="discount" id="discount" placeholder="0 %" required>
            </div>
            <div class="form__box">
                <label class="form__box--label"for="dues">Cuotas:</label>
                <select class="form__box--select" name="dues" id="dues">
                    <option value="0">0 cuotas</option>
                    <option value="3">3 cuotas</option>
                    <option value="6">6 cuotas</option>
                    <option value="9">9 cuotas</option>
                    <option value="12">12 cuotas</option>
                    <option value="18">18 cuotas</option>
                    <option value="24">24 cuotas</option>
                </select>
            </div>
            <div class="form__box">
                <label class="form__box--label"for="stock">Stock:</label>
                <input class="form__box--input" type="number" min="0" name="stock" id="stock" placeholder="0 unidades" required>
            </div>
            <!-- <div class="form__box">
                <label class="form__box--label"for="img">Imagenes:</label>
                <input type="file" name="img" id="img" multiple>    
            </div> -->
           <div class="form__box">
            <input class="form--btn" type="submit" value="Agregar Producto">
            <input class="form--btn" type="reset" value="Limpiar">
           </div>
        </form>
    </section>
</main>


