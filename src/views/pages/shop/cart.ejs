        <div id="formularioPedido">
            <h2>Detalles de Entrega</h2>

            <label for="codigoPostal">Código Postal:</label>
            <input type="text" id="codigoPostal" placeholder="Ingrese su código postal">

            <label for="opcionesEntrega">Opciones de Entrega:</label>
            <select id="opcionesEntrega">
                <option value="estandar">Entrega Estándar</option>
                <option value="express">Entrega Express</option>
                <option value="urgente">Entrega Urgente</option>
            </select>
            <button type="button" onclick="abrirFormulario()">OK</button>
        </div>

        <div class="discount">
            <h3>Cupón de Descuento</h3>
            <h5>Ingresa un código de cupón para obtener un descuento.</h5>
            <button type="button" onclick="abrirCupon()">Aplicar Cupón</button>
        </div>

        <a href="/">Volver</a>
        <a href="#" onclick="continuarCompra()">CONTINUAR CON LA COMPRA</a>

    </div>
<script>
        function abrirFormulario() {
            // Abre el archivo de texto para completar la información del formulario de pedido.
            window.open('formulario_pedido.txt', '_blank');
        }

        function abrirCupon() {
            // Abre el archivo de texto para ingresar el código de cupón.
            window.open('cupon_descuento.txt', '_blank');
        }

        function continuarCompra() {
            // Agrega aquí la lógica para continuar con la compra.
            alert('Continuar con la compra...');
